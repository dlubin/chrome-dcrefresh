{
  "manifest_version": 2,

  "name": "DCRefresh",
  "description": "Tired of mashing f5 when your wifi hiccups? If so, this is the extension for you.",
  "version": "1.0",
  "permissions": [
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui":{
    "page": "options.html",
    "chrome_style":true
  }
}
